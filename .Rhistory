library(lubridate)
plot_tides <- function(tides){
ggplot(data = tides) +
geom_point(
aes(x = as.numeric(strftime(date_time, "%H")), y = height, color = phenomenon)) +
facet_grid(
cols = vars(factor(wday(date_time, locale = 'en_GB.UTF-8'), levels = week_order)),
rows = vars(isoweek(date_time))) +
geom_text(
aes(x = -Inf, y = +Inf, label = day(date_time),
vjust = 1, hjust = 0)
) +
labs(
x = "Time",
y = "Tide height (m)"
) +
theme_bw()
}
